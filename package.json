{
  "name": "legenda-front-corp",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "14.15.4",
    "npm": "6.14.13",
    "yarn": "please-use-npm"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:scss": "stylelint 'src/**/*.scss' --syntax scss",
    "lint:scss:fix": "stylelint 'src/**/*.scss' --syntax scss --fix",
    "lint:ts": "eslint src/** --ext .ts,.tsx",
    "lint:ts:fix": "eslint src/** --ext .ts,.tsx --fix"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint . --fix",
      "git add ."
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss --fix",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g './tools/commitlint.js'",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "tools/commitizen.js"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.23.0",
    "formik": "^2.2.9",
    "js-cookie": "^2.2.1",
    "nanoid": "^3.1.25",
    "next": "^11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-responsive": "^9.0.0-beta.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@commitlint/cli": "^11.0.0",
    "@types/axios": "^0.14.0",
    "@types/react": "17.0.15",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "eslint": "7.31.0",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.2",
    "husky": "^4.3.8",
    "lint-staged": "^11.1.1",
    "prettier": "2.3.2",
    "sass": "^1.37.0",
    "stylelint": "^13.13.1",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.20.1",
    "typescript": "4.3.5",
    "url-loader": "^4.1.1"
  }
}
